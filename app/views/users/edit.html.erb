<h1>Edit My Account</h1>

<div class="form-container">
<b>Account Details:</b>
<% form_for @user, :url => account_path do |f| %>
  <%= f.error_messages %>
  <%= render :partial => "form", :object => f %>
  <%= f.submit "Update" %>
<% end %>
</div>

<div class="form-container">
<b>User Avatar:</b>
<% form_for @user, :html => { :multipart => true }, :url => account_path do |form| %>
<table>
	<tr>
		<td>
  <%= form.file_field :avatar %>
  <br />
  <br />
  <%= form.submit "Update" %>
  </td>
  <td>
  	<%= image_tag @user.avatar.url(:big) %>
</td>
</table>
<% end %>
</div>


<div class="form-container">
<b>Change Password:</b>
<% form_for @user, :url => account_path do |f| %>
  <%= f.error_messages %>
  <%= render :partial => "form_password", :object => f, :locals => {:form => f } %>
  <%= f.submit "Update" %>
<% end %>
</div>

<%= link_to "My Profile", account_path %>


<p>
  <b>Username:</b>
  <%=h @user.login_username %>
</p>

<p>
  <b>Login count:</b>
  <%=h @user.login_count %>
</p>

<p>
  <b>Last request at:</b>
  <%=h @user.last_request_at %>
</p>

<p>
  <b>Last login at:</b>
  <%=h @user.last_login_at %>
</p>

<p>
  <b>Current login at:</b>
  <%=h @user.current_login_at %>
</p>

<p>
  <b>Last login ip:</b>
  <%=h @user.last_login_ip %>
</p>

<p>
  <b>Current login ip:</b>
  <%=h @user.current_login_ip %>
</p>